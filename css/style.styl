body
	padding 0
	margin 0

#box1
	width 100%
	
	
#box2
	width 100%
	float left
	margin 0 auto
	.textimg
		margin 0 auto
		float left
		padding 3% 15%
		.textimgbox
			float left
			.imgbox
				float left
				overflow hidden !important
				img
					width 100%
					height 100%
			.textbox
				float left
				text-align center
				height: 365px
				padding-top: 31%
				@media screen and (max-width 1024px)
					height 250px

				@media screen and (max-width 768px)
					height 190px
					font-size 10px
				@media screen and (max-width 480px)
					background gray
					height 296px
					color white
						p
							color #d1d1d1
						button
							color white
							border 2px solid white
							background gray
				h1
					font-size: 30px
					font-family: inherit
					font-weight: 300
				button
					border 2px solid #d1d1d1
					background white
			&:hover
				.imgbox
					img
						transform scale(1.1)
						transition: all 1s
				.textbox
					background gray
					color white
					p
						color #d1d1d1
					button
						color white
						border 2px solid white
						background gray
			@media screen and (max-width 484px)
				margin-top 20px							
	.listsale
		margin 0 auto
		float left
		padding 3% 15%
		.bestsaler
			float left
			border 1px solid gray
			text-align center
			margin-bottom 20px
			a
				text-decoration none
				color black
				font-size 15px
				line-height 30px
			&:hover
				background #d1d1d1
				border 1px solid gray
			i.fa-pen-square
				border-right 1px solid #d1d1d1
				display block
				font-size: 30px
				padding 5% 0.5% 0 0
				@media screen and (max-width 1040px)
					font-size 18px
			a
				@media screen and (max-width 1040px)
					font-size 10px
					line-height 15px
		.bs1
			i.fa-star
				border-right 1px solid #d1d1d1
				display block
				font-size: 20px
				// margin 10%
				padding 5% 0.5% 0 0
				@media screen and (max-width 1040px)
					font-size 18px
			i.fa-image
				border-right 1px solid #d1d1d1
				display block
				font-size: 30px
				// margin 10%
				padding 1.5% 0.5% 0 0
				@media screen and (max-width 1040px)
					font-size 18px
			.right
				display block
				// margin 10%
				padding 6% 0 0 20%
				@media screen and (max-width 1040px)
					display none
			.left
				display block
				// margin 10%
				padding 6% 0 0 20%
				@media screen and (max-width 1040px)
					display none
		.bs11
			@media screen and (max-width 1040px)
				display none
